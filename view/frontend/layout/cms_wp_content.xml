<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
    layout="1column-wp">
    <body>
        <attribute name="class" value="wp-content"/>
        <referenceContainer name="content" htmlTag="div" htmlClass="entry-content"/>
        <referenceContainer name="before.body.end">
            <block
                class="Magento\Framework\View\Element\Template"
                name="mooore.wordpress.integration.cms.js"
                template="Mooore_WordpressIntegrationCms::js/extra-js.phtml"
            />
        </referenceContainer>
    </body>
</page>
